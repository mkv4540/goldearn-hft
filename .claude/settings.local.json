{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir -p)",
      "Bash(ls -la)",
      "Bash(git status)",
      "Bash(git add .github/workflows/)",
      "Bash(git commit -m)",
      "Bash(git push)",
      "Bash(cmake --build build)",
      "Bash(./build.sh)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git clone:*)",
      "Bash(make:*)",
      "Bash(chmod 777:*)"
    ]
  }
}