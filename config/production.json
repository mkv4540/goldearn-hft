{
  "system": {
    "environment": "production",
    "log_level": "INFO",
    "log_file": "/var/log/goldearn/goldearn.log",
    "enable_monitoring": true,
    "monitoring_port": 9090,
    "pid_file": "/var/run/goldearn.pid"
  },
  "market_data": {
    "nse_host": "feed.nse.in",
    "nse_port": 9899,
    "nse_backup_host": "backup-feed.nse.in",
    "bse_host": "feed.bseindia.com",
    "bse_port": 9898,
    "enable_simulation": false,
    "connection_timeout": 5000,
    "heartbeat_interval": 30000,
    "enable_redundancy": true
  },
  "trading": {
    "enable_paper_trading": false,
    "initial_capital": 100000000.0,
    "max_position_size": 50000000.0,
    "max_order_value": 5000000.0,
    "enable_strategies": true
  },
  "risk": {
    "enable_risk_checks": true,
    "max_daily_loss": 10000000.0,
    "max_exposure": 50000000.0,
    "max_var_1d": 5000000.0,
    "position_concentration": 0.20,
    "sector_concentration": 0.40,
    "max_order_rate": 1000,
    "max_message_rate": 50000
  },
  "database": {
    "redis_host": "prod-redis.internal",
    "redis_port": 6379,
    "postgres_host": "prod-postgres.internal",
    "postgres_port": 5432,
    "postgres_db": "goldearn_hft",
    "postgres_user": "hftuser",
    "clickhouse_host": "prod-clickhouse.internal",
    "clickhouse_port": 9000
  },
  "authentication": {
    "nse_api_key": "${NSE_API_KEY}",
    "nse_secret_key": "${NSE_SECRET_KEY}",
    "nse_certificate_path": "/etc/goldearn/certs/nse_client.pem",
    "nse_private_key_path": "/etc/goldearn/certs/nse_client.key",
    "bse_api_key": "${BSE_API_KEY}",
    "bse_secret_key": "${BSE_SECRET_KEY}",
    "bse_certificate_path": "/etc/goldearn/certs/bse_client.pem",
    "bse_private_key_path": "/etc/goldearn/certs/bse_client.key"
  },
  "security": {
    "enable_tls": true,
    "min_tls_version": 1.3,
    "ca_cert_path": "/etc/goldearn/certs/ca.pem",
    "skip_hostname_verification": false,
    "skip_certificate_verification": false,
    "enable_rate_limiting": true
  },
  "monitoring": {
    "prometheus_enabled": true,
    "prometheus_port": 9091,
    "health_check_port": 8080,
    "metrics_interval": 5,
    "log_performance_metrics": true
  }
}